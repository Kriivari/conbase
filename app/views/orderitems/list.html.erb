<h1>Listing orderitems</h1>

<table>
  <tr>
  <% for column in Orderitem.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for orderitem in @orderitems %>
  <tr>
  <% for column in Orderitem.content_columns %>
    <td><%=h orderitem.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => orderitem %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => orderitem %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => orderitem }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @orderitem_pages.current.previous } if @orderitem_pages.current.previous %>
<%= link_to 'Next page', { :page => @orderitem_pages.current.next } if @orderitem_pages.current.next %> 

<br />

<%= link_to 'New orderitem', :action => 'new' %>
