<h1>Haun tulokset</h1>

<table>
  <tr>
    <th>Etunimi</th>
    <th>Sukunimi</th>
    <th>Lempinimi</th>
    <th>Sähköposti</th>
    <th>Puhelin</th>
    <th>Syntynyt</th>
    <th>Muistiinpanot</th>
    <th>CV</th>
    <th>Salasana</th>
  </tr>
  
<% for person in @people
if @group == nil || person.in_reserve_group? %>
  
  <tr>
    <td valign="top"><%= link_to person.firstname, :action => 'show', :id => person %></td>
    <td valign="top"><%= link_to person.lastname, :action => 'show', :id => person %></td>
    <td valign="top"><%= person.nickname %>
    <td valign="top"><%= person.primary_email %>
    <td valign="top"><%= person.primary_phone %>
    <td valign="top"><%= person.birthyear %>
    <td valign="top"><%= person.notes %>
    <td valign="top"><%= person.cv %>
    <td valign="top"><%= person.password != nil %>
    <td><%= link_to 'Näytä', :action => 'show', :id => person %></td>
    <td><%= link_to 'Muokkaa', :action => 'edit', :id => person %></td>
    <td><%= link_to 'Poista', { :action => 'destroy', :id => person }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end
end %>
</table>
<%= link_to 'Takaisin hakusivulle', :action => 'search' %>
