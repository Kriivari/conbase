<%= error_messages_for 'mailinglist' %>

<!--[form:mailinglist]-->
<p><label for="mailinglist_name">Name</label><br/>
<%= f.text_field :name %></p>

<p><label for="mailinglist_address">Address</label><br/>
<%= f.text_field :address %></p>

<p><label for="mailinglist_autoadd">Autoadd</label><br/>
<select id="mailinglist_autoadd" name="mailinglist[autoadd]">
<option value="false">No</option>
<% if @mailinglist && @mailinglist.autoadd %>
<option value="true" selected="selected">Yes</option>
<% else %>
<option value="true">Yes</option>
<% end %>
</select></p>

<p><label for="mailinglist_autodelete">Autodelete</label><br/>
<select id="mailinglist_autodelete" name="mailinglist[autodelete]">
<option value="false">No</option>
<% if @mailinglist && @mailinglist.autodelete %>
<option value="true" selected="selected">Yes</option>
<% else %>
<option value="true">Yes</option>
<% end %>
</select></p>

<p><label for="mailinglist_autoupdate">Autoupdate</label><br/>
<select id="mailinglist_autoupdate" name="mailinglist[autoupdate]">
<option value="false">No</option>
<% if @mailinglist && @mailinglist.autoupdate %>
<option value="true" selected="selected">Yes</option>
<% else %>
<option value="true">Yes</option>
<% end %>
</select></p>

<p><label for="mailinglist_notes">Notes</label><br/>
<%= f.text_area :notes  %></p>

<p><label for="mailinglist_template">Template</label><br/>
<%= f.text_area :template  %></p>
