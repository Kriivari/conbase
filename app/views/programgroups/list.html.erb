<h1>Listing programgroups</h1>

<table>
  <tr>
  <% for column in Programgroup.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for programgroup in @programgroups %>
  <tr>
  <% for column in Programgroup.content_columns %>
    <td><%=h programgroup.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => programgroup %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => programgroup %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => programgroup }, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @programgroups %>

<br />

